
<script>
    let items = document.querySelectorAll('li');
    items.forEach(li => {
       li.addEventListener('click' , (event)=>{
                 fetch(`/todos/${li.dataset.id}` , {method:'DELETE'})
                 .then(res=> location.reload()) 
                 .catch(err => console.log(err));
       });
    });
</script>
</body>
</html>